{
  "name": "@codelims/frontend",
  "version": "1.0.0",
  "description": "CodeLIMS Frontend - Electron + Vue 3 + Vuetify",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && pnpm --filter @codelims/electron electron:dev\"",
    "electron:build": "vite build && electron-builder",
    "build:electron": "vite build && electron-builder",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "build": {
    "appId": "com.codelims.app",
    "productName": "CodeLIMS",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@tailwindcss/vite": "^4.1.16",
    "axios": "^1.7.9",
    "pinia": "^2.2.8",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuetify": "^3.7.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.5.1",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.16",
    "vite": "^6.0.3",
    "vite-plugin-vuetify": "^2.0.4",
    "vue-chartjs": "^5.3.2",
    "wait-on": "^8.0.1"
  }
}
